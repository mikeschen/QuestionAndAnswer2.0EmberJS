{{#if updateQuestionForm}}
  <div class="white">
    <h3>Update {{question.author}}'s Question:</h3>
    	<div>
        <form>
          <div class="form-group">
            <label for="author">Name</label>
            {{input value=question.author id="author"}}
          </div>

          <div class="form-group">
            <label for="query">Your Question</label>
            {{input value=question.query id="query"}}
          </div>

          <div class="form-group">
            <label for="notes">Notes</label>
            {{input value=question.notes id="notes"}}
          </div>

          <button class="btn btn-danger" {{action 'update' question}}>Save</button>
        </form>
      </div>
    </div>
{{else}}
  <button class="btn btn-warning" {{action 'updateQuestionForm'}}>Update</button>
{{/if}}

